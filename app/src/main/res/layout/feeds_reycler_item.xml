<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/prof_img_cont"
        android:layout_width="@dimen/_33sdp"
        android:layout_height="@dimen/_33sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/prof_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_placeholder" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/prof_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:fontFamily="@font/roboto_medium"
        android:text="The Verge"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintStart_toEndOf="@id/prof_img_cont"
        app:layout_constraintTop_toTopOf="@id/prof_img_cont" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:fontFamily="@font/roboto"
        android:text="Tech News"
        android:textColor="@color/txtgrey"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toEndOf="@id/prof_img_cont"
        app:layout_constraintTop_toBottomOf="@id/prof_name" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/roboto"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Meta explains how AI influences what we see on Facebook and Instagram"
        android:textColor="@color/txtblack"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prof_img_cont" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/img_cont"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_195sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_placeholder" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/cmnt_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/roboto"
        android:text="View all 9 comments"
        android:textColor="@color/txtblack"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_cont" />

    <ImageView
        android:id="@+id/heart_icon"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cmnt_txt" />

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/roboto"
        android:text="21 Likes"
        android:textColor="@color/txtgrey"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toEndOf="@id/heart_icon"
        app:layout_constraintTop_toTopOf="@id/heart_icon" />

    <ImageView
        android:id="@+id/cmnt_icon"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:src="@drawable/comment"
        app:layout_constraintStart_toEndOf="@id/likes"
        app:layout_constraintTop_toBottomOf="@id/cmnt_txt" />

    <TextView
        android:id="@+id/cmnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/roboto"
        android:text="9 Comments"
        android:textColor="@color/txtgrey"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toEndOf="@id/cmnt_icon"
        app:layout_constraintTop_toTopOf="@id/cmnt_icon" />

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_36sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:src="@drawable/share"
        app:layout_constraintStart_toEndOf="@id/cmnt"
        app:layout_constraintTop_toBottomOf="@id/cmnt_txt" />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:fontFamily="@font/roboto"
        android:text="Share"
        android:textColor="@color/txtgrey"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toEndOf="@id/share_icon"
        app:layout_constraintTop_toTopOf="@id/share_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>